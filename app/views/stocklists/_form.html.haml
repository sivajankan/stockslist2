= form_for @stocklist do |f|
  - if @stocklist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stocklist.errors.count, "error")} prohibited this stocklist from being saved:"
      %ul
        - @stocklist.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :symbol
    = f.text_field :symbol
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :marketcap
    = f.text_field :marketcap
  .field
    = f.label :ipoyear
    = f.date_select :ipoyear
  .field
    = f.label :sector
    = f.text_field :sector
  .field
    = f.label :industry
    = f.text_field :industry
  .actions
    = f.submit 'Save'
