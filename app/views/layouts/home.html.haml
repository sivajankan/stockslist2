!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "Stockslist"
    = csrf_meta_tags
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    / Le fav and touch icons
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/


  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href => "#"}Stockslist
          .container.nav-collapse
            %ul.nav
              %li= link_to "Home", "/"
              %li= link_to "YahooInfo", :stock_fetch_yahoo_info
          
            %ul.nav.pull-right
              - if user_signed_in?
                %li= link_to "StocksIndex", :stocklists
                %li= link_to 'Edit account', edit_user_registration_path
                %li= link_to "Log out", destroy_user_session_path, data: {confirm: 'Do you want to logout?'}, method: :delete
              - else
                %li= link_to 'Login', new_user_session_path
                %li= link_to 'Sign up', new_user_registration_path

    = render partial: 'layouts/messages'
    .container-fluid
      .content
        .row
          = yield
          - if @sidebar
            = render :partial => 'layouts/sidebar'

    %footer.navbar-fixed-bottom
      %p.pull-right &copy; JKLabs 2012
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    -#= javascript_include_tag "application"
